# Staging Environment Variables Template
# Copy this file to .env.staging and fill in the values
# DO NOT commit .env.staging to version control

# =============================================================================
# POSTGRESQL DATABASE
# =============================================================================
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_FOR_STAGING_DB

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=staging
PORT=3001

# CORS - Comma-separated list of allowed origins
# For local staging: http://localhost:80,http://localhost:3000
# For Railway: https://your-frontend-url.railway.app
# For Render: https://your-frontend-url.onrender.com
# For custom domain: https://staging.yourdomain.com
ALLOWED_ORIGINS=http://localhost:80,http://localhost:3000

# Database Connection (for Docker Compose)
DATABASE_URL=postgresql://staging_user:${POSTGRES_PASSWORD}@postgres:5432/astrology_staging

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Secret - MUST be at least 32 characters long
# Generate a secure random string for staging
JWT_SECRET=CHANGE_THIS_STAGING_JWT_SECRET_MIN_32_CHARS

# JWT Token Expiration
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# SWISS EPHEMERIS
# =============================================================================

# Path to Swiss Ephemeris data files
EPHEMERIS_PATH=./ephemeris

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL for frontend to call
# For local staging: http://localhost:3001
# For Railway: https://your-backend-url.railway.app
# For Render: https://your-backend-url.onrender.com
# For custom domain: https://staging-api.yourdomain.com
VITE_API_URL=http://localhost:3001

# =============================================================================
# LOGGING (Optional)
# =============================================================================

# Log level for staging: error, warn, info, debug
# LOG_LEVEL=info

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Application monitoring service (e.g., Sentry, DataDog)
# SENTRY_DSN=your-sentry-dsn-for-staging
# DATADOG_API_KEY=your-datadog-api-key
